{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["bun-types"]
  },
  "include": [
    "electron/**/*.ts",
    "src/**/*.ts",
    "src/app/**/*.tsx",
    "tests/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
