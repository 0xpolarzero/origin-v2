{
  "name": "origin-v2",
  "private": true,
  "type": "module",
  "main": "dist/electron/main.js",
  "packageManager": "bun@1.3.7",
  "scripts": {
    "build": "bun run typecheck && bun run build:web && bun run build:electron",
    "build:web": "bun node_modules/vite/bin/vite.js build",
    "build:electron": "bun node_modules/typescript/bin/tsc -p tsconfig.electron.json",
    "dev:web": "bun node_modules/vite/bin/vite.js",
    "dev:desktop": "bun run build:electron && ORIGIN_RENDERER_URL=http://localhost:5173 bun node_modules/electron/cli.js .",
    "start": "bun node_modules/electron/cli.js .",
    "lint": "bun run typecheck",
    "format": "bun node_modules/prettier/bin/prettier.cjs --check package.json",
    "test": "bun test",
    "test:unit:core": "bun test tests/unit/core",
    "test:core": "bun test tests/unit/core tests/integration/core-platform.integration.test.ts tests/integration/workflow-automation.integration.test.ts",
    "test:integration:core": "bun test tests/integration/core-platform.integration.test.ts",
    "test:integration:db": "bun test tests/integration/database-core-platform.integration.test.ts",
    "test:integration:api": "bun test tests/integration/api-data.integration.test.ts tests/integration/workflow-api.integration.test.ts tests/integration/workflow-api-http.integration.test.ts",
    "test:integration:workflow": "bun test tests/integration/workflow-automation.integration.test.ts tests/integration/workflow-automation-edge-cases.integration.test.ts tests/integration/workflow-surfaces.integration.test.ts",
    "test:integration:platform": "bun test tests/integration/platform-mandated-dependencies.integration.test.ts",
    "typecheck": "bun node_modules/typescript/bin/tsc --noEmit -p tsconfig.typecheck.json"
  },
  "dependencies": {
    "@mariozechner/pi-ai": "0.54.2",
    "effect": "3.19.19",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "smithers-orchestrator": "0.8.5",
    "super-ralph": "github:evmts/super-ralph#ef8726d",
    "zod": "4.3.6"
  },
  "patchedDependencies": {
    "super-ralph@github:evmts/super-ralph#ef8726d": "patches/super-ralph-codex-schema.patch",
    "smithers-orchestrator@0.8.5": "patches/smithers-orchestrator-jj-traceability.patch"
  },
  "devDependencies": {
    "bun-types": "1.3.7",
    "electron": "40.6.0",
    "prettier": "3.8.1",
    "shadcn": "3.8.5",
    "typescript": "5.9.3",
    "vite": "7.3.1"
  }
}
